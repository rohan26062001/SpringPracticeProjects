<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="student" class="com.rohan.xml.studentconsole.beans.Student" scope="prototype">
        <property name="id" value="1"/>
        <property name="name" value="Rohan"/>
        <property name="course" ref="course"/>
    </bean>

    <bean name="course" class="com.rohan.xml.studentconsole.beans.Course">
        <constructor-arg index="0" value="Java Spring Boot"/>
    </bean>
</beans>
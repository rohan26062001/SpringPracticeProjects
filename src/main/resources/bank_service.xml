<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="bankApp" class="com.rohan.xml.bankingservice.beans.BankApp" autowire="byName"/>
    <bean name="hdfc" class="com.rohan.xml.bankingservice.beans.HDFCBankService" primary="true"/>
    <bean name="bankService" class="com.rohan.xml.bankingservice.beans.ICICIBankService"/>
    <bean name="txn" class="com.rohan.xml.bankingservice.beans.Transaction"  scope="prototype">
        <property name="type" value="withdraw"/>
        <property name="amount" value="10000"/>
    </bean>
</beans>